<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetManagementActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 상단 예산 관리 섹션 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/used_money_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용한 돈"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/remaining_money_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="남은 돈"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/used_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/used_money_label"
                    android:text="121545원"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/remaining_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/remaining_money_label"
                    android:text="121545원"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>

            <!-- 예산 항목 리스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- 예산 항목 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/rounded_background"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/green_circle"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/budget_date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="2024.08.27"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/budget_amount_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/budget_date_1"
                        android:layout_below="@id/budget_date_1"
                        android:text="60,000원"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/budget_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/budget_amount_1"
                        android:text="1차 충전"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>

                <!-- 추가 예산 항목 반복 -->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
